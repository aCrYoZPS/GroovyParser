<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParserInterface.MainPage"
             Title="Groovy Parser"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Open file"
            Clicked="OnOpenFileClicked" 
            />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="7,5,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollView VerticalScrollBarVisibility="Always"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="4">
                <Editor 
                    x:Name="FileEditor"
                    Text="{Binding FileContent}" 
                    AutoSize="TextChanges"
                    HeightRequest="620" 
                    BackgroundColor="AliceBlue"
                    
                    />
            </ScrollView>

            <Button
                Text="Analize"
                Clicked="OnAnalizeClicked"
                WidthRequest="100" 
                Grid.Column="0"
                Grid.Row="4"
                Margin="0, 5, 0, 5"/>

            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="0"
                                 Margin="20, 20, 0, 0">

                <Label
                    Text="Program dictionary:"
                    FontSize="24"
                    HorizontalTextAlignment="Start"/>
                <Label
                    Text="Program length:"
                    FontSize="24"
                    HorizontalTextAlignment="Start"
                    Margin="0, 10, 0, 10"/>
                <Label
                    Text="Program volume:"
                    FontSize="24"
                    HorizontalTextAlignment="Start"/>

                <ScrollView Padding="10,15,10,10">
                    <Editor
                        x:Name="ResultTable"
                        IsReadOnly="True"
                        WidthRequest="275"
                        HeightRequest="465"
                        HorizontalOptions="Start"
                        Background="WhiteSmoke"
                        TextColor="SlateGray"/>
                </ScrollView>

            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                                 Grid.Row="0"
                                 Margin="0, 20, 0, 0">

                <Label
                    x:Name="DictionaryLabel"
                    FontSize="24"
                    TextColor="Purple"
                    HorizontalTextAlignment="Start"/>
                <Label
                    x:Name="LengthLabel"
                    FontSize="24"
                    TextColor="Purple"
                    HorizontalTextAlignment="Start"
                    Margin="0, 10, 0, 10"/>
                <Label
                    x:Name="VolumeLabel"
                    FontSize="24"
                    TextColor="Purple"
                    HorizontalTextAlignment="Start"/>

            </VerticalStackLayout>
            
            <Image 
                Grid.Row="0"  
                Grid.Column="2" 
                Grid.RowSpan="3"
                Source="groovy.png"  
                Opacity="0.8" 
                Margin="0, 0, 20, 0"/>

        </Grid>

    </VerticalStackLayout>


</ContentPage>
